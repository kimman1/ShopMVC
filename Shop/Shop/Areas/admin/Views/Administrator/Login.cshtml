@model Shop.admin

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{

    <table align="center" class="">
        <tr>
            <td>Username:</td>
            <td>@Html.TextBox("username")</td>
        </tr>
        <tr>
            <td>Password:</td>
            <td>@Html.TextBox("password")</td>
        </tr>
        <tr>
            <td colspan="2" align="center"><input type="submit" value="Login" /></td>
        </tr>
        <tr>
            <td>@ViewBag.Mess</td>
        </tr>
    </table>


}
@{
    Layout = null;
}
