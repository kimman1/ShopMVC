@model Shop.admin

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    <!DOCTYPE html>
    <html>
    <head>
        <meta charset="utf-8" />
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
    </head>
    <body background="https://download.hipwallpaper.com/desktop/1920/1080/35/4/SkHTnN.jpg">
     <div class="container-fluid">

             <div class="row text-center justify-content-center align-items-end ">
                 <div class="col col-sm-6 col-md-6 col-lg-4 col-xl-3 h-100">
                     <form action="">
                         <div class="form-group">
                             <span style="color:aqua; font-size:20px;">Username</span>
                             @Html.TextBox("username", null, new { @class = "form-control", placeholder = "Input username" })
                         </div>
                         <div class="form-group">
                             <span style="color:aqua;font-size:20px">Password</span>
                             @Html.Password("Password", null, new { @class = "form-control", placeholder = "Input password" })
                         </div>
                         <button type="submit" class="btn btn-info btn-lg btn-block">Sign In</button>
                     </form>
                 </div>
             </div>
         </div>
     </body>
    
    </html>

}
@{
    Layout = null;
}
@Styles.Render("~/CSS/admin.css")
